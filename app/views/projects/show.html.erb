<!-- Indiviual project page -->
<h1>Project Show Page</h1>
  <div class="show">
 	  <div class="row">
  	 <div class="col-md-1">
  	 </div>
      <div class="col-md-10">
        <div class="title"> 
          <p><strong><%= @project.title %></strong>
          </p> 
        </div>
        <div class="author">
          <p>By: <strong><%= @project.author %></strong>
          </p>
        </div>
        <%unless action_name == "index"%>
        <%end%>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>
  <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img src="https://s3.eu-west-2.amazonaws.com/spartaproject2showme<%=@project.image.path%>" class="img-show"> 
            </div>
            <div class="item">
              <img src="https://s3.eu-west-2.amazonaws.com/spartaproject2showme<%=@project.image2.path%>" class="img-show">
            </div>
            <div class="item">
              <img src="https://s3.eu-west-2.amazonaws.com/spartaproject2showme<%=@project.image3.path%>" class="img-show">
            </div>
          </div>
  <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <div class="description">
          <p>Desc: <%= markdown(@project.desc) %>
          </p>
          <p>Github_link: <a href="<%=@project.github_link%>">project.github_link</a> 
          </p> 
          <p> Tags: <%=@project.tags %> </p>
          <br>
          <%= link_to "Back", projects_path %> |
		      <% if (@user != nil && (@user.id == @project.user_id || @user.admin == true))%>
  		      <%= link_to "Edit", edit_project_path(@project) %> |
  		      <%= link_to "Destroy", @project, method: :delete, data: { confirm: "Are you sure?" } %> 
		      <% end %> 
        <br>
           <!-- Share Buttons Start -->
          <div class="share">
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
              <a class="a2a_button_twitter"></a>
            </div>
          </div>
          <script async src="https://static.addtoany.com/menu/page.js"></script>
            <!-- Share Buttons END -->
        </div>
      </div>
      <div class="col-md-1">
  		</div>
    </div>
</div>
